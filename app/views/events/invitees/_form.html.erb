<% if @invitee.errors.any? %>
  <ul>
    <% @invitee.errors.full_messages.each do |error_message| %>
      <%= content_tag :li, error_message %>
    <% end %>
  </ul>
<% end %>

<%= form_for([@event,@invitee]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.submit "Invite" %>
<% end %>
