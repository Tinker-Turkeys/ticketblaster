<%= label_tag "event_custom_fields_label", "Label" %>
<%= text_field_tag "custom_fields[][label]", custom_field.label %>

<%= label_tag "event_custom_fields_type", "Field type" %>
<%= select_tag "custom_fields[][type]", 
  options_for_select(CustomField.types.map { |c| [c.humanize, c] }, 
    custom_field.type) %>

<%= label_tag "event_custom_fields_value", "Default value" %>
<%= text_field_tag "custom_fields[][value]", custom_field.value %>

<%= label_tag "event_custom_fields_options", "Options" %>
<%= text_field_tag "custom_fields[][options]", custom_field.options %>

<% if @event.persisted? %>
  <%= label_tag nil do %>
    <%= check_box_tag "custom_fields[][ignore]", true %>
    Delete
  <% end %>
<% end %>